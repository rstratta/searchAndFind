<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:descendantFocusability="blocksDescendants"
        android:padding="2dip">


        <ImageButton
            android:id="@+id/cancel_query_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:background="@drawable/bag"
            android:contentDescription="Borrar"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/query_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_toRightOf="@id/cancel_query_button"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:contentDescription="Alquiler de vestido"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/query_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/cancel_query_button"
            android:gravity="top"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/query_name" />

    </RelativeLayout>

</LinearLayout>